{
    "compilerOptions": {
        "target": "es5",
        "jsx": "preserve",
        "sourceMap": false,
        "experimentalDecorators": true,
        "noImplicitUseStrict": true,
        "removeComments": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "outDir": "./lib",
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": ["src"],
    "exclude": [
        "node_modules"
    ]
}